---
const navItems = [
  { name: 'AI Musings', href: '/blog' },
  { name: 'xSwarm Plans', href: '/roadmap' },
  { name: 'Docs', href: '/docs' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 terminal-window border-0">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3">
        <img src="/xswarm.svg" alt="xSwarm" class="h-12 w-12" />
        <span class="text-3xl font-bold terminal-text glitch-text flex items-center logo-terminal-font" data-text="xSwarm.ai">
          <span class="logo-prompt">$ </span>
          <span class="logo-text">xSwarm.ai</span>
          <span class="terminal-cursor">_</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="terminal-text hover:text-terminal-cyan transition-colors font-medium"
            target={item.href.startsWith('http') ? '_blank' : undefined}
            rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {item.name}
          </a>
        ))}
        
        <!-- GitHub Link -->
        <a
          href="https://github.com/chadananda/xSwarm"
          target="_blank"
          rel="noopener noreferrer"
          class="terminal-text hover:text-terminal-cyan transition-colors"
          aria-label="GitHub"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
          </svg>
        </a>

      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden p-2 rounded-lg text-secondary hover:bg-surface transition-colors"
        aria-label="Toggle mobile menu"
      >
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border">
      <div class="py-4 space-y-2">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="block px-4 py-2 terminal-text hover:text-terminal-cyan transition-colors font-medium"
            target={item.href.startsWith('http') ? '_blank' : undefined}
            rel={item.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          >
            {item.name}
          </a>
        ))}
        <a
          href="https://github.com/chadananda/xSwarm"
          target="_blank"
          rel="noopener noreferrer"
          class="block px-4 py-2 text-secondary hover:bg-surface transition-colors font-medium"
        >
          GitHub
        </a>
      </div>
    </div>
  </div>
</nav>

<style>
  /* Import fonts directly in component to ensure availability */
  @import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap');
  
  /* Define component-scoped font variables */
  :root {
    --navbar-font: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace;
  }
  
  /* CRITICAL: Override any and all font settings with maximum specificity */
  nav.terminal-window,
  nav.terminal-window *,
  nav.terminal-window a,
  nav.terminal-window span,
  nav.terminal-window div,
  nav.terminal-window button,
  body nav.terminal-window,
  body nav.terminal-window *,
  html body nav.terminal-window,
  html body nav.terminal-window * {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace !important;
    font-style: normal !important;
  }
  
  /* Specific overrides for known problem areas */
  .blog-article nav.terminal-window,
  .blog-article nav.terminal-window * {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace !important;
  }
  
  /* Sticky Navbar Enhancements */
  nav.terminal-window {
    /* Ensure solid background for sticky navbar */
    background: rgba(26, 26, 46, 0.98) !important;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    /* Full shadow border all around including top */
    box-shadow: 
      0 -4px 8px rgba(0, 0, 0, 0.9),    /* top shadow */
      0 4px 8px rgba(0, 0, 0, 0.9),     /* bottom shadow */
      -4px 0 8px rgba(0, 0, 0, 0.9),    /* left shadow */
      4px 0 8px rgba(0, 0, 0, 0.9),     /* right shadow */
      0 0 24px rgba(0, 0, 0, 0.8) !important; /* overall shadow */
  }
  
  /* Add bottom border glow for cyberpunk effect */
  nav.terminal-window::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      transparent,
      rgba(0, 212, 255, 0.8),
      transparent
    );
    animation: border-glow 3s ease-in-out infinite;
  }
  
  @keyframes border-glow {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }
  
  /* Terminal cursor animation */
  .terminal-cursor {
    display: inline-block;
    margin-left: 2px;
    font-weight: normal;
    animation: cursor-blink 1s ease-in-out infinite;
    filter: drop-shadow(0 0 3px #00ff00);
  }
  
  @keyframes cursor-blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }
  
  @keyframes scanlines {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(10px);
    }
  }
  
  /* Logo styling - clean without glow */
  nav .flex.items-center img {
    transition: transform 0.3s ease;
  }
  
  nav .flex.items-center:hover img {
    transform: scale(1.05);
  }
  
  /* Make glitch animation more subtle for better readability */
  nav .glitch-text::before,
  nav .glitch-text::after {
    opacity: 0.05; /* Extremely transparent - barely visible */
    color: #00ff00; /* Green instead of default colors */
    text-shadow: 0 0 2px #00ff00; /* Extremely subtle green glow */
  }
  
  /* Logo prompt styling */
  .logo-prompt {
    margin-right: 0.5rem;
    font-weight: bold;
    font-family: var(--navbar-font) !important;
    filter: drop-shadow(0 0 3px #00ff00) drop-shadow(0 0 6px #00ff00);
  }
  
  /* Terminal font for logo - IMPORTANT: Force this everywhere */
  .logo-terminal-font {
    font-family: var(--navbar-font) !important;
    position: relative;
  }
  
  /* Additional specificity for logo and navigation text */
  nav.terminal-window .logo-terminal-font,
  nav.terminal-window .logo-prompt,
  nav.terminal-window .logo-text,
  nav.terminal-window .terminal-cursor,
  nav.terminal-window .terminal-text {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace !important;
  }
  
  /* Apple II style scanline text effect */
  .logo-prompt,
  .logo-text,
  .terminal-cursor {
    background-image: repeating-linear-gradient(
      0deg,
      #00ff00 0px,
      #00ff00 1px,
      transparent 1px,
      transparent 2px
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-fill-color: transparent;
  }
  
  /* Logo text styling with terminal green and glow */
  .logo-text {
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 0 3px #00ff00) drop-shadow(0 0 6px #00ff00);
  }
  
  .logo-prompt,
  .terminal-cursor {
    position: relative;
    z-index: 2;
  }
  
  /* Ensure glitch text data attribute doesn't include the prompt */
  nav .glitch-text {
    position: relative;
  }
  
  nav .glitch-text::before,
  nav .glitch-text::after {
    content: "$ xSwarm.ai"; /* Include the full text with prompt */
    left: 0; /* No offset - directly behind */
    font-family: var(--navbar-font) !important;
  }
</style>

<style is:global>
  /* Global override to ensure navbar fonts are never changed by other styles */
  nav.terminal-window,
  nav.terminal-window * {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace !important;
  }
  
  /* Override blog-specific font changes */
  .blog-article nav.terminal-window,
  .blog-article nav.terminal-window *,
  article nav.terminal-window,
  article nav.terminal-window *,
  main nav.terminal-window,
  main nav.terminal-window * {
    font-family: 'JetBrains Mono', 'Fira Code', 'Cascadia Code', 'Courier New', monospace !important;
  }
</style>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuToggle && mobileMenu) {
    mobileMenuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>