---
export interface Props {
  amount: string;
  context: string;
  stats: Array<{
    label: string;
    value: string;
  }>;
}

const { amount, context, stats } = Astro.props;
---

<div class="relative my-8 p-8 bg-gradient-to-br from-terminal-red/10 to-terminal-red/5 border-2 border-terminal-red/30 rounded-2xl text-center overflow-hidden">
  <!-- Warning icon background -->
  <span class="absolute -top-5 -right-5 text-8xl opacity-10 rotate-[-15deg]">⚠️</span>
  
  <div class="text-5xl font-black text-terminal-red font-orbitron mb-2 tracking-tight" style="text-shadow: 0 0 20px rgba(239, 68, 68, 0.5)">
    {amount}
  </div>
  
  <div class="text-xl text-gray-200 mb-4 font-mono">
    {context}
  </div>
  
  <div class="flex flex-wrap gap-4 justify-center">
    {stats.map((stat) => (
      <span class="px-4 py-2 bg-black/30 rounded-lg font-mono text-sm text-gray-300">
        {stat.label}: <span class="text-terminal-red font-semibold">{stat.value}</span>
      </span>
    ))}
  </div>
</div>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&display=swap');
  
  .font-orbitron {
    font-family: 'Orbitron', monospace;
  }
</style>