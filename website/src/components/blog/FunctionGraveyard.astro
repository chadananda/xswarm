---
export interface Props {
  tombstones: Array<{
    name: string;
    birth: string;
    death: string;
    isMore?: boolean;
  }>;
}

const { tombstones } = Astro.props;
---

<div class="my-12 relative overflow-hidden">
  <div class="flex flex-wrap gap-4 justify-center p-8 bg-gradient-to-b from-brand-secondary/10 to-black/30 rounded-2xl">
    {tombstones.map((tombstone) => (
      <div class={`
        relative w-36 h-44 p-4
        bg-gradient-to-b from-gray-800 to-gray-900
        border-2 rounded-t-xl
        flex flex-col items-center justify-center text-center
        transition-all duration-300
        shadow-[0_10px_20px_rgba(0,0,0,0.5)]
        hover:-translate-y-1 hover:shadow-[0_15px_30px_rgba(139,92,246,0.3)]
        ${tombstone.isMore 
          ? 'border-dashed border-brand-secondary/50 bg-gradient-to-b from-brand-secondary/20 to-brand-secondary/10' 
          : 'border-brand-secondary/30 hover:border-brand-secondary/60'
        }
      `}>
        <span class="absolute -top-5 text-3xl text-brand-secondary/50">‚úù</span>
        
        <span class={`
          block font-mono text-sm font-semibold mb-2
          ${tombstone.isMore ? 'text-brand-secondary/80' : 'text-terminal-cyan'}
        `}>
          {tombstone.name}
        </span>
        
        <span class="text-xs text-gray-400 leading-relaxed">
          {tombstone.birth}<br/>
          {tombstone.death}
        </span>
      </div>
    ))}
  </div>
</div>