  {
    name: 'Twitter',
    href: 'https://twitter.com/xswarmai',
    icon: 'M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z'
  },
  {
    name: 'npm',
    href: 'https://www.npmjs.com/package/xswarm',
    icon: 'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-2-8h4v4h2V8h-2v4h-2V8h-2v8z'
  }
];
---

<footer class="bg-background border-t border">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
      <!-- Brand Section -->
      <div class="md:col-span-2">
        <div class="flex items-center space-x-2 mb-4">
          <img src="/xswarm.png" alt="XSwarm" class="h-8 w-8" />
          <span class="text-xl font-bold bg-gradient-to-r from-brand-primary to-brand-secondary bg-clip-text text-transparent">
            XSwarm.ai
          </span>
        </div>
        <p class="text-secondary mb-4">
          Transform Every Developer into an AI Team Leader.
        </p>
        <div class="flex space-x-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-secondary hover:text-link transition-colors"
              aria-label={social.name}
            >
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Links Sections -->
      {Object.entries(footerLinks).map(([category, links]) => (
        <div>
          <h3 class="font-semibold text-primary mb-4">{category}</h3>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-secondary hover:text-link transition-colors"
                  target={link.href.startsWith('http') ? '_blank' : undefined}
                  rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Section -->
    <div class="mt-12 pt-8 border-t border">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-secondary text-sm">
          © {currentYear} XSwarm.ai. All rights reserved.
        </p>
        <div class="mt-4 md:mt-0 flex items-center space-x-4">
          <a
            href="https://github.com/chadananda/xswarm/blob/main/LICENSE"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-secondary hover:text-link transition-colors"
          >
            MIT License
          </a>
          <span class="text-muted">•</span>
          <a
            href="mailto:chadananda@gmail.com"
            class="text-sm text-secondary hover:text-link transition-colors"
          >
            Contact
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>