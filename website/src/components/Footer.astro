            <div class="terminal-directory mb-2">./product/</div>
            <ul class="ml-4 space-y-1">
              {footerLinks.Product.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="terminal-link"
                    target={link.href.startsWith('http') ? '_blank' : undefined}
