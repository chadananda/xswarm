            <ul class="ml-4 space-y-1">
              {socialLinks.map((social) => (
                <li>
                  <a
                    href={social.href}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="terminal-link flex items-center"
                  >
                    {social.name.toLowerCase()}
                    <svg class="h-4 w-4 ml-2 inline-block" fill="currentColor" viewBox="0 0 24 24">
                      <path d={social.icon} />
                    </svg>
                  </a>
                </li>
              ))}
