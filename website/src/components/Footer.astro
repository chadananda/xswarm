          <span class="text-terminal-cyan">Contact:</span> <a href="mailto:chadananda@gmail.com" class="terminal-link">chadananda@gmail.com</a>
        </div>
        
        <!-- Cursor -->
        <div class="terminal-line">
          <span class="terminal-prompt">$</span>
          <span class="cli-cursor"></span>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-terminal {
    margin-top: 4rem;
    background: var(--terminal-bg);
    border-top: 1px solid rgba(0, 255, 255, 0.2);
  }
  
  .footer-terminal .terminal-window {
    border-radius: 0;
    margin: 0;
  }
  
  .footer-terminal .terminal-content {
    padding: 2rem 1rem;
    min-height: auto;
  }
  
  .terminal-line {
    font-family: monospace;
    font-size: 0.875rem;
  }
  
  .terminal-prompt {
    color: var(--terminal-cyan);
    margin-right: 0.5rem;
  }
  
  .terminal-command {
    color: var(--terminal-green);
  }
  
  .terminal-output {
    color: rgba(var(--color-terminal-green), 0.8);
    font-family: monospace;
    font-size: 0.75rem;
    line-height: 1.4;
  }
  
  .terminal-output pre {
    font-size: 0.625rem;
    line-height: 1.2;
    color: var(--terminal-cyan);
    text-shadow: 0 0 10px currentColor;
  }
  
  .terminal-directory {
    color: var(--terminal-cyan);
    font-weight: 600;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    padding-bottom: 0.5rem;
    margin-bottom: 0.75rem;
  }
  
  .terminal-directory::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, 
      var(--terminal-cyan) 0%, 
      transparent 50%
    );
    opacity: 0.3;
  }
  
  .terminal-link {
    color: rgba(var(--color-terminal-green), 0.7);
    text-decoration: none;
    transition: all 0.2s ease;
    font-size: 0.75rem;
    display: inline-block;
    position: relative;
    padding-left: 1rem;
  }
  
  .terminal-link::before {
    content: '>';
    position: absolute;
    left: 0;
    color: var(--terminal-cyan);
    opacity: 0.5;
    transition: all 0.2s ease;
  }
  
  .terminal-link:hover {
    color: var(--terminal-cyan);
    text-shadow: 0 0 5px currentColor;
    transform: translateX(4px);
  }
  
  .terminal-link:hover::before {
    opacity: 1;
    transform: translateX(-2px);
  }
  
  @media (max-width: 768px) {
    .terminal-output pre {
      font-size: 0.5rem;
    }
  }
</style>