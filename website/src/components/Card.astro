---
export interface Props {
  icon?: string;
  title: string;
  description?: string;
  class?: string;
  hover?: boolean;
}

const { icon, title, description, class: className = '', hover = true } = Astro.props;

const hoverClasses = hover ? 'hover:shadow-xl hover:scale-105 hover:border-link' : '';
const classes = `bg-surface rounded-xl shadow-lg border border-border p-6 transition-all duration-300 ${hoverClasses} ${className}`;
---

<div class={classes}>
  {icon && (
    <div class="text-4xl mb-4">
      {icon}
    </div>
  )}
  <h3 class="text-xl font-semibold text-primary mb-3">
    {title}
  </h3>
  {description && (
    <p class="text-tertiary">
      {description}
    </p>
  )}
  <div class="mt-4">
    <slot />
  </div>
</div>