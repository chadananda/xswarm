---
export interface Props {
  icon?: string;
  title: string;
  description?: string;
  class?: string;
  hover?: boolean;
}

const { icon, title, description, class: className = '', hover = true } = Astro.props;

const hoverClasses = hover ? 'hover:scale-102 hover:border-terminal-cyan' : '';
const classes = `bg-terminal-bg border border-terminal-green/30 rounded-lg p-6 transition-all duration-300 ${hoverClasses} ${className}`;
---

<div class={classes}>
  {icon && (
    <div class="text-3xl mb-3 text-terminal-cyan">
      {icon}
    </div>
  )}
  <h3 class="text-lg font-semibold mb-2 text-terminal-green">
    {title}
  </h3>
  {description && (
    <p class="text-sm text-terminal-green/70">
      {description}
    </p>
  )}
  <div class="mt-3">
    <slot />
  </div>
</div>